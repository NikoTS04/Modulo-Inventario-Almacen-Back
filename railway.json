{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd inventario-almacen && ./gradlew clean bootJar -x test"
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT $JAVA_OPTS -jar inventario-almacen/build/libs/inventario-almacen-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
